@model IEnumerable<InventoryMngmt.Web.ViewModels.WarehouseViewModel>

@{
    ViewBag.Title = "Main Page";
}

<div class="jumbotron">
    <h1>CS Inventory Management</h1>
</div>

    <div class="form-group col-lg-12">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            @Html.DropDownList("location", new SelectList(ViewBag.WarehouseTo), "All Warehouses", new { @class = "form-control" })
            @Html.DropDownList("type", new SelectList(ViewBag.Type), "All Product Types", new { @class = "form-control" })
            <input class="btn btn-primary btn-sm" type="submit" value="Search" />
        }
    </div>

@{var name = string.Empty; }

<table class="table table-striped">

    @foreach (var item in Model)
    {

        <tr>
            @if (!name.Equals(item.Name))
            {
                <th>
                    <strong>@item.Name</strong>
                </th>
                name = item.Name;

                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
            }
        </tr>
            <tr>
                <td>
                    @string.Empty
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
    }

    <tr style="background:#abb8b8 ">
        <td colspan="100" style="font-size:larger; text-align:right; padding-right:15%">
            <strong><text>Total Items: </text> @Model.Sum(p => p.Total)</strong>
        </td>
    </tr>

</table>







